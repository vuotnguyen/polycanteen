<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/d_24"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddProductFrag">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="@dimen/d_8"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@id/textView7"
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icfood" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/d_56"
            android:layout_marginStart="@dimen/d_24"
            android:layout_toEndOf="@id/imageView5"
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera" />

        <ImageView
            android:layout_marginLeft="@dimen/d_28"
            android:layout_marginTop="@dimen/d_8"
            android:layout_below="@id/imageView6"
            android:layout_toRightOf="@id/imageView5"
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unnamed" />

        <TextView
            android:layout_marginTop="@dimen/d_56"
            android:padding="@dimen/d_8"

            android:layout_toRightOf="@id/imageView6"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chụp ảnh" />

        <TextView
            android:padding="@dimen/d_8"

            android:layout_below="@id/textView8"
            android:layout_toRightOf="@id/imageView6"
            android:id="@+id/tv_chooseimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh" />
    </RelativeLayout>

    <EditText
        android:layout_marginVertical="@dimen/d_24"
        android:background="@null"
        android:id="@+id/edt_nameP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:drawableStart="@drawable/ic_baseline_fastfood_24"
        android:drawablePadding="@dimen/d_24"
        android:hint="Tên món ăn"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_marginVertical="@dimen/d_24"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/textView11"
            android:layout_height="wrap_content"
            android:text="Đơn Vị"
            android:layout_width="0dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/d_8" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giá" />

        <EditText
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="0dp"
            android:text="0"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Price" />

    </LinearLayout>


    <TableRow
        android:layout_marginVertical="@dimen/d_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView13"
            android:padding="@dimen/d_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại" />

        <Spinner
            android:padding="@dimen/d_8"
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <EditText
        android:layout_marginVertical="@dimen/d_24"
        android:background="@null"
        android:id="@+id/edt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:drawableStart="@drawable/ic_baseline_details_24"
        android:drawablePadding="@dimen/d_24"
        android:hint="Chi tiết"
        android:textColor="@color/black" />

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:visibility="gone"
            android:backgroundTint="#F86A32"
            android:id="@+id/button3"
            android:layout_margin="@dimen/d_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm" />
        <Button
            android:visibility="gone"
            android:backgroundTint="#F86A32"
            android:id="@+id/button4"
            android:layout_margin="@dimen/d_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />


    </TableRow>
</LinearLayout>